<!DOCTYPE html>
<html>
  <head>
    <title>Speakeasy</title>
    <%= csrf_meta_tags %>

     <link href="http://vjs.zencdn.net/6.2.4/video-js.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to 'SpeakEasy', root_path, class: 'navbar-brand'%>
      
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
             <li class="nav-item">
               <%= link_to 'See All Courses', courses_path , class: 'nav-link'%>
             </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
              </li>              
              <li class="nav-item">
                 <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>  
              <li class="nav-item">
                <%= link_to 'Sign in', new_user_session_path, class: 'nav-link'%>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link'%>
              </li>
            <% end %>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </nav>
    
        <% if notice.present? %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      
      <%= yield %>
    </div>
    
  <div id="footer">
      <div class="container">
      <div class="row">
      <div class="col-12 col-sm-4">
        <b>Spiritual Mentors</b>
        <br />
        <%= link_to 'Lead a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
        <div class="col-12 col-sm-4">
          <b>About</b>
          <br />
          <!--<%= link_to 'Team', '#' %>-->
          <!--<br />-->
          <!--<%= link_to 'Careers', '#' %>-->
          <%= link_to 'Privacy Policy', privacy_path %>
        </div>
        <!--<div class="col-12 col-sm-3">-->
        <!--  <b>Contact</b>-->
        <!--  <br />-->
        <!--  ken@thefirehoseproject.com-->
        <!--  <br />-->
        <!--  One Kendall Square-->
        <!--  <br />-->
        <!--  Cambridge MA, 02113-->
        <!--</div>-->
        <div class="col-12 col-sm-4 social">
          <b>Social</b>
            <br />
            <br />
            <%= link_to 'http://github.com/nevillealee' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://www.linkedin.com/in/neville-lee-b54a20116/' do %>
              <span class="fa fa-linkedin-square fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://twitter.com/Nevillealee' do %>
              <span class="fa fa-twitter-square fa-2x social-button"></span>
            <% end %>
        </div>
      </div>
    </div>
  </div>

    
     <script src="http://vjs.zencdn.net/6.2.4/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
